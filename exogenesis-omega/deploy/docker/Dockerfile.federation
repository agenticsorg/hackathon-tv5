# Multi-stage Dockerfile for Federation Worker
# Handles cross-shard pattern aggregation

# ============================================================
# Build Stage
# ============================================================
FROM rust:1.75-slim as builder

WORKDIR /build

# Install build dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    protobuf-compiler \
    && rm -rf /var/lib/apt/lists/*

# Copy workspace manifest
COPY Cargo.toml Cargo.lock ./

# Copy all crates
COPY crates ./crates
COPY services ./services

# Build release binary with optimizations
RUN cargo build --release --bin federation-worker \
    && strip target/release/federation-worker

# ============================================================
# Runtime Stage
# ============================================================
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd -m -u 1000 omega && \
    mkdir -p /data/federation && \
    chown -R omega:omega /data/federation

# Copy binary from builder
COPY --from=builder /build/target/release/federation-worker /usr/local/bin/

# Set ownership
RUN chown omega:omega /usr/local/bin/federation-worker

# Switch to non-root user
USER omega

# Expose metrics port
EXPOSE 9091/tcp

# Set working directory
WORKDIR /data/federation

# Run federation worker
ENTRYPOINT ["/usr/local/bin/federation-worker"]
CMD []

# Labels
LABEL org.opencontainers.image.title="Omega Federation Worker"
LABEL org.opencontainers.image.description="Cross-shard pattern aggregation worker"
LABEL org.opencontainers.image.version="0.1.0"
LABEL org.opencontainers.image.vendor="Exogenesis Omega"
